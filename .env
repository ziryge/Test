# Configuration du modèle
USE_OLLAMA=true
OLLAMA_MODEL=deepseek-r1:14b
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.9
MODEL_MAX_TOKENS=1024
SYSTEM_PERSONA="Tu es NeoCortex, un agent IA surpuissant conçu pour surpasser les limites des systèmes actuels comme Manus et GenSpark. Tu vises à résoudre des problèmes complexes avec précision et créativité."

# Configuration des bases de données
VECTORDB_ENABLED=true
VECTORDB_TYPE=chroma
PINECONE_API_KEY=  # Optionnel pour stockage cloud
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Capacités avancées
ENABLE_MULTIAGENT=true
ENABLE_ACTIVE_LEARNING=true
ENABLE_WEB_ACCESS=true
MAX_SEARCH_RESULTS=8
ENABLE_CODE_INTERPRETER=true
ENABLE_PLUGIN_SYSTEM=true
ENABLE_MEMORY_CONSOLIDATION=true

# Configuration réseau
API_PORT=5000
FRONTEND_PORT=3000
ENABLE_WEBSOCKETS=true
CORS_ORIGINS=*

# Journalisation et débogage
DEBUG=true
LOG_LEVEL=info
TRACE_REQUESTS=true
PERFORMANCE_METRICS=true

# Sécurité
JWT_SECRET=  # Remplir en production
ENABLE_API_AUTHENTICATION=false
RATE_LIMIT=100